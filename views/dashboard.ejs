                    <span class="emoji">üçû</span> Whole Wheat Bread
                </label>
                <!-- <span class="item-info">1</span> -->
                <i class="fas fa-pencil-alt edit-icon"></i>
            </li>
            <li class="list-item" data-store="walmart">
                <input type="checkbox" id="item6">
                <label for="item6" class="item-details">
                    <span class="emoji">üêî</span> Chicken Breast
                </label>
                <!-- <span class="item-info category">Meat</span> -->
                <i class="fas fa-pencil-alt edit-icon"></i>
            </li>
            <li class="list-item" data-store="walmart">
                <input type="checkbox" id="item7">
                <label for="item7" class="item-details">
                    <span class="emoji">üßº</span> Dish Soap
                </label>
                <!-- <span class="item-info category">Household</span> -->
                <i class="fas fa-pencil-alt edit-icon"></i>
            </li>
        </ul>
    </div>
    
    <div class="store-group">
        <h3 class="store-header">üì¶ Costco</h3>
        <ul class="item-list">
            <li class="list-item" data-store="costco">
                <input type="checkbox" id="item1">
                <label for="item1" class="item-details">
                    <span class="emoji">üçé</span> Bananas
                </label>
                <!-- <span class="item-info">4</span> -->
                <i class="fas fa-pencil-alt edit-icon"></i>
            </li>
            <li class="list-item" data-store="costco">
                <input type="checkbox" id="item4">
                <label for="item4" class="item-details">
                    <span class="emoji">üßÄ</span> Cheese
                </label>
                <!-- <span class="item-info category">Dairy</span> -->
                <i class="fas fa-pencil-alt edit-icon"></i>
            </li>
        </ul>
    </div>
    
    <div class="store-group">
        <h3 class="store-header">üè† Unassigned</h3>
        <ul class="item-list">
            <li class="list-item" data-store="unassigned">
                <input type="checkbox" id="item2">
                <label for="item2" class="item-details">
                    <span class="emoji">ü•ï</span> Carrots
