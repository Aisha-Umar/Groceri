                <div class="nav-item">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Logout</span>
                </div>
            </footer>
        </div>
        <div id="addItemModal" class="modal-overlay">
            <div class="modal-container">

                <div class="modal-header">
                    <h2>Add New Item</h2>
                    <button id="closeModalBtn" class="close-modal">
                        <i class="fas fa-times"></i>
                    </button>
                </div>

                <div class="modal-body">
                    <form id="addItemForm" action="/saveItem" method="POST">

                        <div class="input-group">
                            <label for="itemName">Item Name</label>
                            <div class="input-wrapper">
                                <i class="fas fa-carrot"></i>
                                <input type="text" id="itemName" name="item" placeholder="e.g., Avocados" required>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="input-group half-width">
                                <label for="itemQty">Quantity</label>
                                <div class="input-wrapper">
                                    <i class="fas fa-hashtag"></i>
                                    <input type="number" id="itemQty" name="quantity" placeholder="1" value="1" min="1">
                                </div>
                            </div>

                            <div class="input-group half-width">
                                <label for="itemStore">Store</label>
                                <div class="input-wrapper">
                                    <i class="fas fa-store"></i>
                                    <select id="itemStore" name="store">
                                        <option value="Walmart">Walmart</option>
                                        <option value="Costco">Costco</option>
                                        <option value="Aldi">Aldi</option>
                                        <option value="Unassigned">Other</option>
                                    </select>
                                    <i class="fas fa-chevron-down select-arrow"></i>
                                </div>
                            </div>
                        </div>

                        <div class="input-group weeks">
                            <label for="weeksLasting">Enter number of weeks the item lasts</label>
                            <div class="input-wrapper">
                                <i class="fas fa-calender"></i>
                                <input type="text" id="weeksLasting" name="weeksLasting" placeholder="e.g., 1,2,3...">
                            </div>
                        </div>

                        <div class="modal-footer">
                            <button type="button" id="cancelBtn" class="btn-secondary">
                                Cancel
                            </button>
                            <button type="submit" class="btn-primary updateBtn">
                                Add Item
                            </button>
                        </div>

                    </form>


                </div>
