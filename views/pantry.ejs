                <div class="search-bar">
                    <i class="fas fa-search"></i>
                    <input id="inputSearch" type="text" placeholder="Search items..." value="">
                </div>
            </header>

            <main class="content">
                <div class="no-items-message">
                    <p>No matching items.</p>
                    <p>Add it to your grocery list?</p>
                    <button class="add-item-button large-button">Add Item</button>
                </div>
                <div class="controls-bar">
                    <div class="select-all">
                        <input type="checkbox" id="select-all-checkbox">
                        <label for="select-all-checkbox">Select All</label>
                    </div>

                    <div class="store-filter">
                        <label for="store-select">Store:</label>
                        <select id="store-select">
                            <option value="all" selected>All Stores</option>
                            <option value="walmart">Walmart</option>
                            <option value="costco">Costco</option>
                            <option value="shoprite">ShopRite</option>
                        </select>
                    </div>
                </div>
                <div class="store-group">
                <h3 class="store-header"></h3>
                 <ul class="item-list">
                 <% for (let item of pantryItems) { %>
                    <li class="list-item" data-store="<%= item.store %>" data-id="<%= item._id %>" data-item="<%= item.item %>">

                                <input type="checkbox" class="item-checkbox" data-id="<%= item._id %>" data-item="<%= item.item %>">

                                <label class="item-details">
                                    <span class="emoji"></span>
                                    <%= item.item %>
                                </label>

                                <span class="item-info">
                                    <%= item.quantity %>
                                </span>
                            </li>
                            <% } %>
                    </ul>
                   

